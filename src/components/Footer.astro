---
import { ORG_INFO } from '../consts';
const today = new Date();
---

<footer>
	<div class="footer-content">
		<div class="org-info">
			<h3>{ORG_INFO.fullName}</h3>
			<p>{ORG_INFO.address}</p>
			<p>KRS: {ORG_INFO.krs} | NIP: {ORG_INFO.nip} | REGON: {ORG_INFO.regon}</p>
		</div>
		<div class="social-links">
			<a href={ORG_INFO.socialMedia.facebook} target="_blank">
				<span class="sr-only">Odwiedź nas na Facebooku</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
					></path></svg
				>
			</a>
		</div>
	</div>
	<div class="copyright">
		&copy; {today.getFullYear()} {ORG_INFO.fullName}. Wszelkie prawa zastrzeżone.
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
	}
	.footer-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1.5em;
		margin-bottom: 1.5em;
	}
	.org-info h3 {
		margin: 0 0 0.5em 0;
		font-size: 1.1em;
		color: rgb(var(--gray-dark));
	}
	.org-info p {
		margin: 0.3em 0;
		font-size: 0.9em;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: #18489F;
	}
	.social-links a:hover {
		color: #24B783;
	}
	.copyright {
		border-top: 1px solid rgba(var(--gray), 0.3);
		padding-top: 1em;
		font-size: 0.9em;
	}
</style>
